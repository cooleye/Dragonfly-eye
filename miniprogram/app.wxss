@import 'style/weui.wxss';

.canvas {
    width: 100%;
    height: 200px;
    z-index: 1;
}

page {
  width: 100%;
  height: 100%;
  background: linear-gradient(#ECE9E6, #FFFFFF); 
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.container{
  width: 100%;
  height: 100%;
  /* padding: 10rpx; */
  overflow-x: hidden;
  overflow-y: scroll;
  background-color: #eee;
}

.mbtn{
  position: fixed;
  left: 0;
  width: 100%;
  bottom: 50rpx;
  width: 90%;
  left: 5%;
  z-index: 999;
}

.uploader-container{
  text-align: center;
  height: 400rpx;
  color: #aaa;
  padding-top: 20rpx;
}
.uploader-image{
  height: 100%;
}

.info-section{
  background: #fff;
  margin-top: 20rpx;
  margin-bottom: 120rpx;
  padding: 30rpx;
  padding-top: 0;
  margin: 30rpx;
  margin-bottom: 170rpx;
  box-shadow: 1px 2px 3px #aaa;
}

.info-title{
  border-bottom: solid 1px rgb(202, 202, 202);
  line-height: 100rpx;
  color: #666;
}

.baike_title{
  font-size: 56rpx;
}
.baike_img{
  margin-top: 20rpx;
  box-shadow: 3px 3px 5px #ccc;
}