page {
  width: 100%;
  height: 100%;
  background: linear-gradient(#ECE9E6, #FFFFFF); 
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.test-list{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.test-item{
  height: 200rpx;
  background: #f00;
  color: #fff;
  font-size: 48rpx;
  text-align: center;
  line-height: 200rpx;
  margin: 10rpx;
  border-radius: 10rpx;
  box-shadow: 1px 2px 2px #c0c0c0;
  text-shadow: 1px 1px 1px #666;
  /* transition: ease 0.1s all;
